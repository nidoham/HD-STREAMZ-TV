<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Component Styles -->
    
    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="cornerRadius">20dp</item>
    </style>
    
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="cornerRadius">20dp</item>
    </style>
    
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
    </style>
    
    <style name="Widget.App.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <style name="Widget.App.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <style name="Widget.App.TextInputLayout.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Floating Action Button Styles -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <style name="Widget.App.FloatingActionButton.Small" parent="Widget.Material3.FloatingActionButton.Small.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <style name="Widget.App.FloatingActionButton.Large" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <!-- Navigation Styles -->
    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemShapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="itemShapeInsetStart">8dp</item>
        <item name="itemShapeInsetEnd">8dp</item>
    </style>
    
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">?attr/colorPrimaryContainer</item>
    </style>
    
    <!-- Toolbar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>
    
    <!-- Full-Screen Style -->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <!-- Modern edge-to-edge implementation -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/md_theme_background</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>
    
    <!-- High Contrast Theme for Accessibility -->
    <style name="AppTheme.HighContrast" parent="AppTheme">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorOutline">#000000</item>
        <item name="colorOutlineVariant">#666666</item>
    </style>
    
    <style name="LinkOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
</resources>

