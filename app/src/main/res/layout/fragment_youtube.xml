<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- SwipeRefreshLayout - Pull to Refresh সাপোর্ট -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main WebView for YouTube - মূল YouTube ভিউয়ার -->
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:scrollbars="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layerType="hardware" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Top Progress Bar - উপরের প্রগ্রেস বার (YouTube স্টাইল) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:max="100"
        android:progress="0"
        android:progressTint="@android:color/holo_red_light"
        android:progressBackgroundTint="@android:color/transparent"
        android:visibility="gone" />

    <!-- Center Loading Indicator - কেন্দ্রীয় লোডিং ইন্ডিকেটর -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateTint="@android:color/holo_red_light" />

    <!-- Network Status Container - নেটওয়ার্ক স্ট্যাটাস কন্টেইনার -->
    <LinearLayout
        android:id="@+id/network_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/stat_notify_error"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/network_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ইন্টারনেট সংযোগ নেই"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:text="পুনরায় চেষ্টা"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Error Message Container - এরর মেসেজ কন্টেইনার -->
    <LinearLayout
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/stat_notify_error"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="সংযোগ সমস্যা"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="ইন্টারনেট সংযোগ চেক করুন এবং আবার চেষ্টা করুন"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/retry_error_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="আবার চেষ্টা করুন"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Fullscreen Video Container - ফুলস্ক্রিন ভিডিও কন্টেইনার -->
    <FrameLayout
        android:id="@+id/fullscreen_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" />

    <!-- Simple Settings Button - সিম্পল সেটিংস বাটন -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:src="@android:drawable/ic_menu_preferences"
        android:tint="@android:color/white"
        android:visibility="gone"
        android:contentDescription="Settings"
        android:clickable="true"
        android:focusable="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>